<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appWhite"
    android:paddingHorizontal="@dimen/_16sdp"
    tools:context=".MainActivity">
<ImageView
    android:src="@drawable/regiter"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/edtNameAccount"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:background="@drawable/designedt"
        android:padding="@dimen/_10sdp"
       android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintBottom_toTopOf="@id/edtPassword"
        android:id="@+id/edtNameAccount"
        android:layout_centerInParent="true"
        android:hint="Name Account"
        android:layout_width="match_parent"
        android:textSize="@dimen/_18sdp"
        android:layout_height="wrap_content"/>
    <EditText

        android:layout_marginHorizontal="@dimen/_8sdp"
        android:background="@drawable/designedt"
        android:padding="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_2sdp"
        android:id="@+id/edtPassword"
        android:hint="PassWord"
        android:textSize="@dimen/_18sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintBottom_toTopOf="@id/edtPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:inputType="number"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/designedt"
        android:padding="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_2sdp"
        android:id="@+id/edtPhoneNumber"
        android:hint="Phone Number"
        android:textSize="@dimen/_18sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintBottom_toTopOf="@id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:background="@drawable/designedt"
        android:padding="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_2sdp"
        android:id="@+id/edtEmail"
        android:hint="Email"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintBottom_toTopOf="@id/btnSignUp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:padding="@dimen/_8sdp"
        android:background="@color/appGreen"
        android:id="@+id/btnSignUp"
        android:text="Sign Up"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/appWhite"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="@dimen/_8sdp"
        app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>